<section class="foot_form_sec common_sec">
  <div class="container">
  <div class="foot_form">
    <p class="SectionHeader__Heading center Heading u-h1">Quick Contact</p>
        {% form 'contact' %}
    {% if form.posted_successfully? %}
    <script> 
      $(document).ready(function() {
        var submitted_data_pop=sessionStorage.getItem('submitted_data_pop');
        if(submitted_data_pop!=''){
          function getCookie(name) {
            var value = "; " + document.cookie;
            var parts = value.split("; " + name + "=");
            if (parts.length == 2) return parts.pop().split(";").shift();
          }
          var obj = jQuery.parseJSON(submitted_data_pop)
          var ad_fname=obj.fname;
          var ad_email=obj.email;
          var ad_phone=obj.phone;
          var ad_comments=obj.additional_com;
          if(ad_fname !="" && ad_email !="" && ad_phone !='') {
            $.ajax({
              url: 'https://www.adluge.com/clientcenter/api/addlead-callback.php',
              jsonp: "callback",
              dataType: "jsonp",
              data:{
                fname : ad_fname,
                phone : ad_phone,
                email : ad_email,
                comments  : ad_comments,
                client_code  : "ueur8h4yarq5lh1",
                referer : window.location.href,
                lead_sessionid : getCookie("_adl_id.AL_1919")
              },
              success: function (data){
                sessionStorage.setItem('submitted_data_pop', '');
                window.location = "/pages/thank-you"; 
              },
            });
          }
        }
      });
    </script>
    {% endif %}
    {% if form.errors %}
    <div class="alert alert-success alert-dismissible" role="alert">
      <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      <!-- {{ form.errors.size }} or {{ form.errors | size }} -->
      <p style="margin-bottom: 5px;">Your contact form has {{ form.errors | size | pluralize: "an error", "a few errors" }}. To submit your form, make the following changes and try again:</p>
      {% for field in form.errors %}
      <p style="margin-bottom: 5px;">The {{ field | capitalize | replace: 'Body', 'Message' }} field {{ form.errors.messages[field] }}.</p>
      {% endfor %}
    </div>
    {% endif %}
    <div class="form_wrap">
      <div class="form_row">
        <div class="form_col_3">
          <div class="input-holder">
            <input type="text" class="required" id="bname" title="Name" placeholder="Name*" name="contact[Name]">
          </div>
        </div>
        <div class="form_col_3">
          <div class="input-holder">
            <input placeholder="Email*" type="text"  class="required email" id="bemail" title="Email" name="contact[email]">
          </div>
        </div>
        <div class="form_col_3">
          <div class="input-holder">
            <input type="text" id="bphone" title="Phone" class="required tel" placeholder="Phone*" name="contact[Phone]">
          </div>
        </div>
        <div class="form_col_1">
          <div class="input-holder">
            <textarea  id="bcomments" title="Questions/Comments" placeholder="Questions/Comments" name="contact[Comments_or_Questions]"></textarea>
          </div>
        </div>
      </div>
      <div class="submit_wrap"><input type="submit" id="submit_btn" value="Submit" class="Button Button--primary"></div>
    </div>
    {% endform %}
  </div>
  </div>
</section>
