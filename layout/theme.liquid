    <script>
        function adjustHeaderOffset() {
          const announcementBar = document.getElementById('shopify-section-announcement');
          const header = document.getElementById('shopify-section-header');

          if (announcementBar && header) {
            const rect = announcementBar.getBoundingClientRect();
            const announcementHeight = rect.height;
            header.style.top = announcementHeight + 'px';
          } else {
            console.warn('Announcement bar or header not found.');
          }
        }
        window.addEventListener('load', adjustHeaderOffset);
        window.addEventListener('resize', adjustHeaderOffset);
    </script>
